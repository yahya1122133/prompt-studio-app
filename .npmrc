# Optimize npm performance and prevent failures
fund=false
audit-level=moderate
progress=true
save-exact=false
package-lock=true
legacy-peer-deps=false

# Registry settings
registry=https://registry.npmjs.org/

# Performance (updated config)
prefer-offline=true
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000
fetch-timeout=300000

# Prevent common issues
engine-strict=false
save-prefix=^

# Modern npm settings
install-strategy=hoisted
maxsockets=15
