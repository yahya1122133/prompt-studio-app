{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "node": "22",
          "browsers": [
            "Chrome >= 90",
            "Firefox >= 88", 
            "Safari >= 14",
            "Edge >= 90"
          ]
        },
        "modules": false,
        "useBuiltIns": "usage",
        "corejs": "3.38"
      }
    ],
    [
      "@babel/preset-react",
      {
        "runtime": "automatic",
        "development": false
      }
    ]
  ],
  "plugins": [
    "@babel/plugin-syntax-dynamic-import",
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-proposal-nullish-coalescing-operator",
    [
      "@babel/plugin-transform-runtime",
      {
        "corejs": false,
        "helpers": true,
        "regenerator": true
      }
    ]
  ],
  "env": {
    "development": {
      "presets": [
        [
          "@babel/preset-react",
          {
            "runtime": "automatic",
            "development": true
          }
        ]
      ]
    }
  }
}
